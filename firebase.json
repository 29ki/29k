{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "hosting": [
    {
      "site": "cupcake-29k-cms",
      "public": "./cms/dist"
    },
    {
      "site": "cupcake-web",
      "public": "./web/dist",
      "redirects": [
        {
          "source": "/",
          "destination": "https://29k.org",
          "type": 301
        },
        {
          "source": "/pt/:path*",
          "destination": "/pt-PT/:path",
          "type": 301
        }
      ]
    }
  ],
  "emulators": {
    "auth": {
      "host": "0.0.0.0",
      "port": 9099
    },
    "firestore": {
      "host": "0.0.0.0",
      "port": 8080
    },
    "ui": {
      "enabled": true
    },
    "functions": {
      "host": "0.0.0.0",
      "port": 5001
    },
    "hosting": {
      "host": "0.0.0.0",
      "port": 5000
    },
    "storage": {
      "host": "0.0.0.0",
      "port": 9199
    }
  },
  "functions": {
    "source": "functions"
  }
}
